{
  "name": "workmux-status",
  "description": "Display Claude agent status in tmux window names via workmux",
  "version": "1.0.0",
  "author": {
    "name": "raine"
  },
  "repository": "https://github.com/raine/workmux",
  "license": "MIT",
  "keywords": ["tmux", "workmux", "status", "agent"],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "workmux set-window-status working"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|elicitation_dialog|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "workmux set-window-status waiting"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "workmux set-window-status working"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "workmux set-window-status done"
          }
        ]
      }
    ]
  }
}
